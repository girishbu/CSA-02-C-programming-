#include <stdio.h>
#include <string.h>

int main()
{
    char str[100], ch;
    int maxCount = 0, count[256] = {0}, len, i;

    printf("Enter a string : ");
    fgets(str, 100, stdin);

    len = strlen(str);

    for(i = 0; i < len; i++)
    {
        count[str[i]]++;

        if(count[str[i]] > maxCount)
        {
            maxCount = count[str[i]];
            ch = str[i];
        }
    }

    printf("Max repeated character in the string = %c \n", ch);
    printf("It occurs %d times", maxCount);

    return 0;
}
