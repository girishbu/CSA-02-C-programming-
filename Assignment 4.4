#include <stdio.h>

int main() {
    int limit;
    printf("Enter the limit: ");
    scanf("%d", &limit);
    
    printf("Pythagorean Triples with values smaller than %d:\n", limit);
    
    for (int a = 1; a <= limit; a++) {
        for (int b = a+1; b <= limit; b++) {
            for (int c = b+1; c <= limit; c++) {
                if (a*a + b*b == c*c) {
                    printf("%d, %d, %d\n", a, b, c);
                }
            }
        }
    }
    
    return 0;
}
